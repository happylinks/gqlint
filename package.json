{
  "name": "gqlint",
  "version": "1.3.0",
  "description": "GraphQL Linter",
  "keywords": [
    "graphql",
    "gql",
    "lint",
    "linter"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/happylinks/gqlint.git"
  },
  "main": "./lib/gqlint.js",
  "scripts": {
    "test": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "bin": {
    "gqlint": "./bin/gqlint.js"
  },
  "author": "Michiel Westerbeek <happylinks@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "chalk": "^1.1.3",
    "commander": "^2.9.0",
    "graphql": "^0.10.1",
    "lodash": "^4.17.4",
    "node-fetch": "^1.7.1",
    "pad-component": "0.0.1",
    "pluralize": "^5.0.0",
    "text-table": "^0.2.0",
    "wordwrap": "^1.0.0"
  },
  "devDependencies": {
    "coveralls": "^2.13.1",
    "husky": "^0.13.4",
    "jest": "^20.0.4",
    "lint-staged": "^3.6.0"
  },
  "jest": {
    "verbose": true
  }
}
